{
  // --- your originals (kept) ---
  "python.defaultInterpreterPath": ".venv/Scripts/python.exe",
  "python.analysis.typeCheckingMode": "basic",
  "editor.formatOnSave": true,
  "files.eol": "\n",
  "files.exclude": {
    "**/__pycache__": true,
    "**/.ipynb_checkpoints": true
  },
  // --- helpful adds for this project ---
  // Use Command Prompt in VS Code’s terminal so batch + %ERRORLEVEL% behave exactly like our CMD runs
  "terminal.integrated.defaultProfile.windows": "Command Prompt",
  // Turn off built-in test discovery for now (we’re not using it yet; keeps the UI quiet)
  "python.testing.pytestEnabled": false,
  "python.testing.unittestEnabled": false
}