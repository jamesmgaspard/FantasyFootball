{
  // ğŸ§© Shared Project Settings (Windows + macOS)
  "python.analysis.typeCheckingMode": "basic",
  "editor.formatOnSave": true,
  // ğŸ§¹ Ignore cache + notebook junk files
  "files.eol": "\n",
  "files.exclude": {
    "**/__pycache__": true,
    "**/.ipynb_checkpoints": true
  },
  // ğŸ Python Virtual Environment
  // Auto-detects correct path on macOS (.venv/bin/python)
  // and gracefully works on Windows (.venv/Scripts/python.exe)
  "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
  "python.terminal.activateEnvironment": true,
  // ğŸ’» Terminal Startup Folder
  "terminal.integrated.cwd": "${workspaceFolder}",
  // ğŸ–¥ï¸ macOS: Bash Profile
  "terminal.integrated.profiles.osx": {
    "bash": {
      "path": "/bin/bash",
      "args": [
        "-l"
      ],
      "icon": "terminal-bash"
    }
  },
  "terminal.integrated.defaultProfile.osx": "bash",
  // ğŸªŸ Windows: Command Prompt Profile
  "terminal.integrated.defaultProfile.windows": "Command Prompt",
  // ğŸ§ª Disable Testing UI (for now)
  "python.testing.pytestEnabled": false,
  "python.testing.unittestEnabled": false
}